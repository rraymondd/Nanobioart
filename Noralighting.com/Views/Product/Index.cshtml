@model IEnumerable <Noralighting.com.Models.Category>

@{
    ViewBag.Title = "Product";
}

<style>

    .image {
        margin: 2%;
        width: 80%;
        border-radius: 10px;
        box-shadow: 0 0 5px grey;
    }

   
</style>
<diV class="container" id="contentp">
    <div class="row">
        
            
                        @foreach (var item in Model)

                                {
                            <div class="col-lg-3">
                                @{
                            string imageSrc = "data:image/png;base64," + Convert.ToBase64String(item.Image);
                                }
                                
                                    <a href=""><img class="image" src="@imageSrc" alt="Thumbnail Image" /></a> 
                             
                                </div>
                                }

      </div>
</diV>